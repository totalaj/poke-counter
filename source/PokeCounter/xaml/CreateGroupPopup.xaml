<Window x:Name="PopupWindow" x:Class="PokeCounter.CreateGroupPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokeCounter"
        mc:Ignorable="d"
        Title="Create a group" Height="101" Width="252" ResizeMode="NoResize" Topmost="True" SizeToContent="WidthAndHeight" IsVisibleChanged="Window_IsVisibleChanged" Closed="PopupWindow_Closed">
    <Grid HorizontalAlignment="Center" Width="228" Height="76" VerticalAlignment="Top">
        <Button x:Name="OKButton" Content="OK" Margin="10,0,0,10" IsDefault="True" Width="100" HorizontalAlignment="Left" TabIndex="3" Height="25" VerticalAlignment="Bottom" Click="OKButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" Margin="0,0,10,10" IsCancel="True" Width="100" HorizontalAlignment="Right" TabIndex="4" Height="25" VerticalAlignment="Bottom" Click="CancelButton_Click"/>
        <Label x:Name="SelectionLabel" Content="Click windows to include/exclude" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="208"/>

    </Grid>
</Window>
