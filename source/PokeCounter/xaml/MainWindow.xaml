                    <MenuItem.Icon>
                        <Image Source="/icons/fullscreen-exit.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Set window size" Click="SetWindowSizeOption_Click">
                    <MenuItem.Icon>
                        <Image Source="/icons/fullscreen.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <Separator/>
            <MenuItem StaysOpenOnClick="True" x:Name="AlwaysOnTopOption" Header="Always on top" IsCheckable="true" IsChecked="True" Checked="AlwaysOnTopOption_Checked" Unchecked="AlwaysOnTopOption_Unchecked" Click="AlwaysOnTopOption_Click"></MenuItem>
            <MenuItem Header="Actions">
                <MenuItem.Icon>
                    <Image Source="/icons/lightning.png"/>
                </MenuItem.Icon>
                <MenuItem Header="Setup file association" Click="SetupFileAssociationOption_Click">
                    <MenuItem.Icon>
                        <Image Source="/icons/paper-clip.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Get new pokemon data from web" Click="GetNewPokemonData_Click">
                    <MenuItem.Icon>
                        <Image Source="/icons/download.png"/>
